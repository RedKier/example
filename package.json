{
  "name": "portfolio-express",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "start:local": "npm run build && node --env-file=.env  dist/index.js",
    "start": "npm run build && node dist/index.js",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "migration:init": "dotenv-run -- mikro-orm migration:create --initial",
    "migration:create": "dotenv-run -- mikro-orm migration:create",
    "migration:up": "dotenv-run -- mikro-orm migration:up",
    "test": "dotenv-run -- jest --forceExit --detectOpenHandles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@mikro-orm/core": "^6.4.5",
    "@mikro-orm/migrations": "^6.4.5",
    "@mikro-orm/postgresql": "^6.4.5",
    "cors": "^2.8.5",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-joi-validation": "^6.0.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@dotenv-run/cli": "^1.3.6",
    "@faker-js/faker": "^9.4.0",
    "@mikro-orm/cli": "^6.4.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/database/mikroOrm.config.ts",
      "./dist/database/mikroOrm.config.js"
    ]
  }
}
